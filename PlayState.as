			FlxG.log("osc in");
			for (var message:OSCMessage in e.data.messages)
			{
				if(message.name == "/amp"){
					if(message.getArgumentValue(0) == 1){
						amp1 = message.getArgumentValue(1);
					}else{
						amp2 = message.getArgumentValue(1);
					}
				}
				if(message.name == "/pitch"){
